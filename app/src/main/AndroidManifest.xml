<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.freddyspeaks">

    <uses-permission android:name="android.permission.INTERNET" />
    uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".OutletDetailsActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LoadingActivity"
            android:label="@string/title_activity_loading"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RewardDisplayActivity"
            android:label="@string/title_activity_goodie_display"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GetRatingActivity"
            android:label="@string/title_activity_get_rating"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RewardConfigurationActivity"
            android:label="@string/title_activity_reward_configuration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BillDetailsActivity"
            android:label="@string/title_activity_bill_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".RewardSelectionActivity"
            android:label="@string/title_activity_reward_selection"
            android:theme="@style/Theme.AppCompat.Light.Dialog" />
        <activity
            android:name=".SubscriptionInfoActivity"
            android:label="@string/title_activity_subscription_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RatingSummaryActivity"
            android:label="@string/title_activity_rating_summary"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name="com.example.admin.receiver.DeviceBootReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.example.admin.receiver.AlarmReceiver"
            android:enabled="true"
            android:exported="true"></receiver>
    </application>

</manifest>
