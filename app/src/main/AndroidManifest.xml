<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.freddyspeaks">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.admin.freddyspeaks.RegisterOutletActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.RateOutletActivity"
            android:label="@string/title_activity_rate_outlet"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.LoadingActivity"
            android:label="@string/title_activity_loading"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.admin.freddyspeaks.RewardDisplayActivity"
            android:label="@string/title_activity_goodie_display"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.GetRatingActivity"
            android:label="@string/title_activity_get_rating"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.RewardConfigurationActivity"
            android:label="@string/title_activity_reward_configuration"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.BillDetailsActivity"
            android:label="@string/title_activity_bill_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.example.admin.freddyspeaks.RewardSelectionActivity"
            android:label="@string/title_activity_reward_selection"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
