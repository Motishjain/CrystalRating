<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.admin.crystalrating">

    <permission
        android:name="com.admin.crystalrating.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.SEND" />
    <uses-permission android:name="com.admin.crystalrating.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/application_icon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.admin.crystalrating.OutletDetailsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.LoadingActivity"
            android:label="@string/title_activity_loading"
            android:noHistory="true"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.admin.crystalrating.RewardDisplayActivity"
            android:label="@string/title_activity_goodie_display"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.GetRatingActivity"
            android:label="@string/title_activity_get_rating"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.RewardConfigurationActivity"
            android:label="@string/title_activity_reward_configuration"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.BillDetailsActivity"
            android:label="@string/title_activity_bill_details"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.RewardSelectionActivity"
            android:label="@string/title_activity_reward_selection"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/RewardSelectDialogTheme" />
        <activity
            android:name="com.admin.crystalrating.SubscriptionInfoActivity"
            android:label="@string/title_activity_subscription_info"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.admin.crystalrating.FeedbackAnalysisActivity"
            android:label="@string/title_activity_rating_summary"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name="com.admin.receiver.DailyAlarmReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.admin.crystalrating.executedailytasks" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.admin.crystalrating" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.admin.services.NodeGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="com.admin.services.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="com.admin.services.RegistrationIntentService"
            android:exported="false" />
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.admin.crystalrating.ThankYouActivity"
            android:label="@string/title_activity_goodie_display"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

    <supports-screens android:compatibleWidthLimitDp="320"/>

</manifest>