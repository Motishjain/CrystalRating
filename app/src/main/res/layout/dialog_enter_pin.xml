<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputPinLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp">

        <com.admin.view.CustomFontEditText
            android:id="@+id/inputPinText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Please enter pin"
            android:inputType="number"
            android:maxLength="4"
            android:theme="@style/inputText"/>
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textColor="#394263"
            android:id="@+id/buttonOk"
            android:layout_weight="1"
            android:background="@drawable/button_with_top_background" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CANCEL"
            android:textColor="#394263"
            android:id="@+id/buttonCancel"
            android:layout_weight="1"
            android:background="@drawable/button_with_top_background" />
    </LinearLayout>
</LinearLayout>