<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_marginTop="13dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:id="@+id/ratingOptionsLayout"
    android:background="@drawable/rating_option"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/ratingOptionEmoticon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="15dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#0000"/>

    <com.example.admin.view.CustomFontTextView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:id="@+id/selectedOptionTextView"
        style="@style/selectedOption" />

</LinearLayout>