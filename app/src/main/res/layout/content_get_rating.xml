<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ratingCardHolder"
    tools:context="com.admin.freddyspeaks.GetRatingActivity"
    tools:showIn="@layout/activity_get_rating"
    android:background="@drawable/app_bg"
    >

    <ImageView
        android:id="@+id/backgroundRatingImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:alpha="0.2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_height="500dp">

            <ImageView
                android:id="@+id/ratingBackArrow"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="100dp"
                android:src="@drawable/previous"
                android:tint="@color/formButtonBg"
                android:scaleType="fitXY"
                android:onClick="getPreviousRating"
                android:background="#0000"/>

            <com.admin.animation.ViewPagerCustomDuration
                android:id="@+id/ratingBarPager"
                android:layout_marginLeft="5dp"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ratingNextArrow"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginTop="100dp"
                android:tint="@color/formButtonBg"
                android:src="@drawable/next"
                android:scaleType="fitXY"
                android:onClick="getNextRating"
                android:background="#0000"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.admin.view.CustomFontButton
                android:id="@+id/ratingDoneButton"
                style="@style/formButton"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="@string/done"
                android:visibility="invisible"
                android:onClick="getNextRating"
                />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
