<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/base32">

        <ImageView
            android:layout_width="@dimen/base33"
            android:layout_height="@dimen/base33"
            android:id="@+id/imageView6"
            android:src="@drawable/ic_delete_black_48dp"
            android:layout_marginLeft="@dimen/base20"
            android:layout_marginTop="@dimen/base16"
            android:layout_marginRight="@dimen/base8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Remove?"
            android:id="@+id/textView2"
            android:layout_gravity="bottom"
            android:textColor="#394263"
            android:textSize="@dimen/font23" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK"
            android:textSize="@dimen/font12"
            android:textColor="#394263"
            android:id="@+id/buttonOk"
            android:layout_weight="1"
            android:background="@drawable/button_with_top_background" />

        <View
            android:layout_width="@dimen/base1"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font12"
            android:text="CANCEL"
            android:textColor="#394263"
            android:id="@+id/buttonCancel"
            android:layout_weight="1"
            android:background="@drawable/button_with_top_background" />
    </LinearLayout>
</LinearLayout>