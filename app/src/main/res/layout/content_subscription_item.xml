<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="@dimen/base75"
    android:paddingBottom="@dimen/base11"
    android:paddingLeft="@dimen/base11"
    android:paddingRight="@dimen/base11"
    android:paddingTop="@dimen/base11"
    tools:context="com.admin.freddyspeaks.SubscriptionInfoActivity"
    android:background="@drawable/subscribe_item_border">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/subscriptionNameTextView"
            android:textColor="#394263"
            android:textStyle="bold"
            android:text="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/subscriptionPriceTextView"
            android:textColor="#394263"
            android:text="" />
    </LinearLayout>

    <com.admin.view.CustomFontButton
        android:id="@+id/payNowButton"
        style="@style/formButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/button_renew"
        android:visibility="visible"
        android:background="@drawable/subscribe_button_corners"
        android:layout_weight="3"
        android:layout_marginTop="@dimen/base2"
        android:layout_marginBottom="@dimen/base2" />

</LinearLayout>
