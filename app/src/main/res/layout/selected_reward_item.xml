<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/reward_item_bg"
    android:layout_width="130dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="130dp">

    <ImageView
        android:id="@+id/selectedRewardImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="5dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal|center_vertical"
        style="@style/rewardImage"  />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <com.example.admin.view.CustomFontTextView
            android:id="@+id/selectedRewardName"
            style="@style/rewardName" />

        <com.example.admin.view.CustomFontTextView
            android:id="@+id/selectedRewardCost"
            style="@style/rewardCost" />

    </LinearLayout>

    <ImageView
        android:id="@+id/selectedRewardDeleteButton"
        android:background="@drawable/delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="top|right"
        android:tint="@color/dark_orange"
        />

</FrameLayout>