<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:layout_gravity="left"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.admin.freddyspeaks.RewardConfigurationActivity"
    tools:showIn="@layout/activity_reward_configuration">

    <com.example.admin.view.CustomFontTextView
        android:id="@+id/rewardConfigurationHeader"
        android:text="@string/configure_your_rewards"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="3"
        android:shadowColor="@color/colorPrimaryDark"
        style="@style/screenHeader"
        android:layout_marginTop="50dp"
        />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        >

        <com.example.admin.view.CustomFontTextView
            android:text="@string/bronze_box_header"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:shadowColor="@color/colorPrimaryDark"
            style="@style/rewardBoxHeader"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_gravity="left" />

        <com.example.admin.view.CustomFontButton
            android:id="@+id/addBronzeRewardsButton"
            style="@style/formButton"
            android:text="Add"
            android:onClick="addBronzeRewards"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_height="@dimen/addRewardButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="0dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/level_reward_box"
        android:id="@+id/bronzeRewardsRecyclerView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        >

        <com.example.admin.view.CustomFontTextView
            android:text="@string/silver_box_header"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:shadowColor="@color/colorPrimaryDark"
            style="@style/rewardBoxHeader"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_gravity="left" />

        <com.example.admin.view.CustomFontButton
            android:id="@+id/addSilverRewardsButton"
            style="@style/formButton"
            android:text="Add"
            android:onClick="addSilverRewards"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_height="@dimen/addRewardButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="0dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/level_reward_box"
        android:id="@+id/silverRewardsRecyclerView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5"
        >

        <com.example.admin.view.CustomFontTextView
            android:text="@string/gold_box_header"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="3"
            android:shadowColor="@color/colorPrimaryDark"
            style="@style/rewardBoxHeader"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_gravity="left" />

        <com.example.admin.view.CustomFontButton
            android:id="@+id/addGoldRewardsButton"
            style="@style/formButton"
            android:text="Add"
            android:onClick="addGoldRewards"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:layout_height="@dimen/addRewardButton"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="0dp" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:background="@drawable/level_reward_box"
        android:id="@+id/goldRewardsRecyclerView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <com.example.admin.view.CustomFontButton
        android:id="@+id/rewardsConfigureNextButton"
        style="@style/formButton"
        android:elevation="3dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="Next"
        android:onClick="rewardConfigNext"
        android:layout_height="30dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        />

</LinearLayout>
