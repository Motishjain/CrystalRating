<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.admin.freddyspeaks.ThankYouActivity"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/thanks_screen">

    <com.admin.view.CustomFontTextView
        android:layout_marginTop="100dp"
        android:id="@+id/rewardDisplayMessage"
        style="@style/thankYouMessageNoRewardConfigured"
        android:layout_centerInParent = "true"
        android:text="Thanks for shopping with us."
        />

    <com.admin.view.CustomFontTextView
        android:layout_marginTop="5dp"
        android:id="@+id/rewardDisplayMessage1"
        style="@style/thankYouMessageNoRewardConfigured"
        android:layout_centerInParent = "true"
        android:text="Hope to see you again soon!"
    />

    <Button
        android:id="@+id/rewardDisplayContinueButton1"
        style="@style/thanksScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:elevation="3dp"
        android:text="Exit"
        android:onClick="exit"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:textColor="#1E0F46" />

</LinearLayout>
