<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="60dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:weightSum="10">

            <com.admin.view.CustomFontTextView
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="From Date" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/from_date_icon"
                android:onClick="changeFromDate" />

            <com.admin.view.CustomFontTextView
                android:id="@+id/fromDate"
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/summary_date_container"
            android:gravity="center"
            android:weightSum="10">

            <com.admin.view.CustomFontTextView
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="3"
                android:text="To Date" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/to_date_icon"
                android:onClick="changeToDate" />

            <com.admin.view.CustomFontTextView
                android:id="@+id/toDate"
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingCategoryFragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
