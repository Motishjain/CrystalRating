<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:weightSum="10"
            android:layout_marginBottom="16dp">

            <com.admin.view.CustomFontTextView
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="From Date" />

            <com.admin.view.CustomFontTextView
                android:id="@+id/fromDate"
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/from_date_icon"
                android:onClick="changeFromDate"
                android:layout_marginRight="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/summary_date_container"
            android:gravity="center"
            android:weightSum="10"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <com.admin.view.CustomFontTextView
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="3"
                android:text="To Date" />

            <com.admin.view.CustomFontTextView
                android:id="@+id/toDate"
                style="@style/dateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:gravity="center" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/to_date_icon"
                android:onClick="changeToDate"
                android:layout_marginRight="16dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ratingCategoryFragments"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="48dp" />
    </LinearLayout>
</ScrollView>
