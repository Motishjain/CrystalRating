<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/header_top_margin"
    tools:context="com.admin.freddyspeaks.RatingSummaryActivity"
    tools:showIn="@layout/activity_rating_summary">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <com.admin.view.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            style="@style/dateText"
            android:text="From Date"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:onClick="changeFromDate"
            android:layout_gravity="bottom"
            android:background="@drawable/change_date"/>
        <com.admin.view.CustomFontTextView
            android:id="@+id/fromDate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            style="@style/dateText"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <com.admin.view.CustomFontTextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            style="@style/dateText"
            android:text="To Date"
            />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:onClick="changeToDate"
            android:layout_gravity="bottom"
            android:background="@drawable/change_date"/>

        <com.admin.view.CustomFontTextView
            android:id="@+id/toDate"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            style="@style/dateText"
            />
    </LinearLayout>

    <Spinner
        android:layout_marginTop="15dp"
        android:id="@+id/questionsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/ratingSummaryChart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
