<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/header_top_margin"
    tools:context="com.admin.freddyspeaks.RatingSummaryActivity"
    tools:showIn="@layout/activity_rating_summary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="10">

        <com.admin.view.CustomFontTextView
            style="@style/dateText"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="From Date" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/from_date_icon"
            android:onClick="changeFromDate" />

        <com.admin.view.CustomFontTextView
            android:id="@+id/fromDate"
            style="@style/dateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/summary_date_container"
        android:gravity="center"
        android:weightSum="10">

        <com.admin.view.CustomFontTextView
            style="@style/dateText"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="To Date" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/to_date_icon"
            android:onClick="changeToDate" />

        <com.admin.view.CustomFontTextView
            android:id="@+id/toDate"
            style="@style/dateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6" />
    </LinearLayout>

    <com.admin.view.CustomFontTextView
        style="@style/selectQuestion"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Question:" />

    <Spinner
        android:id="@+id/questionsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_spinner_container"
        android:layout_marginTop="10dp" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/ratingSummaryChart"
        android:layout_width="350dp"
        android:layout_height="350dp" />

</LinearLayout>
