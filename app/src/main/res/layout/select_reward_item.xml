<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dp"
    android:id="@+id/selectRewardFrameLayout"
    android:layout_marginLeft="@dimen/item_offset"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/selectRewardImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal|center_vertical"
        style="@style/rewardImage"
        android:background="#0000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginLeft="5dp"
        android:orientation="vertical">

        <com.example.admin.view.CustomFontTextView
            android:id="@+id/selectRewardName"
            style="@style/rewardName"
            android:gravity="top|center"
            />

        <com.example.admin.view.CustomFontTextView
            android:id="@+id/selectRewardCost"
            style="@style/rewardCost"
            android:gravity="bottom|right"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/selectRewardCheckbox"
        android:button="@drawable/checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="top|right"
        android:backgroundTint="@color/black"
        />

</FrameLayout>