<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/base100"
    android:id="@+id/selectRewardFrameLayout"
    android:layout_marginLeft="@dimen/item_offset"
    android:layout_marginTop="@dimen/base5"
    android:layout_marginBottom="@dimen/base5"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/selectRewardCheckbox"
        android:button="@drawable/custom_checkbox"
        android:layout_width="@dimen/base20"
        android:layout_height="@dimen/base20"
        android:layout_marginRight="@dimen/base10"
        android:layout_marginTop="@dimen/base10"
        android:layout_gravity="top|right"
        android:backgroundTint="@color/white"
        />

    <ImageView
        android:id="@+id/selectRewardImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base75"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal|center_vertical"
        style="@style/rewardImage"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="@dimen/base2"
        android:orientation="vertical">

        <com.admin.view.CustomFontTextView
            android:id="@+id/selectRewardName"
            style="@style/rewardName"
            android:layout_marginLeft="@dimen/base5"
            />

        <com.admin.view.CustomFontTextView
            android:id="@+id/selectRewardCost"
            style="@style/rewardCost"
            android:layout_marginTop="@dimen/base2"
            android:layout_marginLeft="@dimen/base5"
            />
    </LinearLayout>

</LinearLayout>