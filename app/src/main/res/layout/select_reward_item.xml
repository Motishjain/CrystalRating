<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/select_reward"
    android:layout_width="100dp"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/selectRewardImage"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:gravity="center"
        android:background="#0000"/>

    <com.example.admin.view.CustomFontTextView
        android:id="@+id/selectRewardName"
        style="@style/rewardName"
        android:gravity="top|center"
        />

    <com.example.admin.view.CustomFontTextView
        android:id="@+id/selectRewardCost"
        style="@style/rewardCost"
        android:gravity="bottom|right"
        />


    <CheckBox
        android:id="@+id/selectRewardCheckbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:gravity="bottom|left"
        />

</FrameLayout>