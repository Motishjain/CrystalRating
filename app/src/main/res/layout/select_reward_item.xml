<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:id="@+id/selectRewardFrameLayout"
    android:layout_marginLeft="@dimen/item_offset"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/selectRewardCheckbox"
        android:button="@drawable/custom_checkbox"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="top|right"
        android:backgroundTint="@color/white"
        />

    <ImageView
        android:id="@+id/selectRewardImage"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal|center_vertical"
        style="@style/rewardImage"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_marginTop="2dp"
        android:orientation="vertical">

        <com.admin.view.CustomFontTextView
            android:id="@+id/selectRewardName"
            style="@style/rewardName"
            android:layout_marginLeft="5dp"
            />

        <com.admin.view.CustomFontTextView
            android:id="@+id/selectRewardCost"
            style="@style/rewardCost"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

</LinearLayout>