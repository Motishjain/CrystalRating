<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="billDetailsThanksMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base25</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:layout_marginTop">@dimen/base12</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="billDetailsDescription">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/base18</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:layout_marginTop">@dimen/base10</item>
    </style>

    <style name="checkoutButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font25</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamilyFile">@string/applicationFont</item>
        <item name="android:background">@drawable/blue_form_button_shape</item>
    </style>


    <style name="didNotShopButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/form_button_color</item>
        <item name="android:textSize">@dimen/form_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamilyFile">@string/applicationFont</item>
        <item name="android:background">@drawable/did_not_shop_shape</item>
    </style>

</resources>