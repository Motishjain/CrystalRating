<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">#321f18</item>
        <item name="android:textColorPrimary">@color/dark_red</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="formButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/form_button_color</item>
        <item name="android:textSize">@dimen/form_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamilyFile">@string/applicationFont</item>
        <item name="android:background">@drawable/form_button_shape</item>
    </style>

    <style name="thanksScreenButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/form_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/form_button_shape</item>
    </style>

    <style name="RewardSelectDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/font12</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/transparent</item>
        <item name="android:bottomDark">@color/transparent</item>
        <item name="android:bottomMedium">@color/transparent</item>
        <item name="android:centerBright">@color/transparent</item>
        <item name="android:centerDark">@color/transparent</item>
        <item name="android:centerMedium">@color/transparent</item>
        <item name="android:fullBright">@color/transparent</item>
        <item name="android:fullDark">@color/transparent</item>
        <item name="android:topBright">@color/transparent</item>
        <item name="android:topDark">@color/transparent</item>
    </style>

    <style name="homePageStyle">
            <item name="fontFamilyFile">@string/applicationFont</item>
            <item name="colorControlNormal">#321f18</item>
            <item name="colorControlActivated">#282D43</item>
    </style>

    <style name="ratingCardNextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/form_button_color</item>
        <item name="android:textSize">@dimen/form_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamilyFile">@string/applicationFont</item>
        <item name="android:background">@drawable/rating_card_next_button_shape</item>
    </style>

    <style name="ratingCardPreviousButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/form_button_color</item>
        <item name="android:textSize">@dimen/form_button_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamilyFile">@string/applicationFont</item>
        <item name="android:background">@drawable/rating_card_previous_button_shape</item>
    </style>

    <style name="tryAgainButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/form_button_color</item>
        <item name="android:textSize">@dimen/form_button_text_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamilyFile">@string/applicationFont</item>
        <item name="android:background">@drawable/blue_form_button_shape</item>
    </style>
</resources>
