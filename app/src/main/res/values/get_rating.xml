<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="questionNumber">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font17</item>
        <item name="android:textColor">@color/question_number</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamilyFile">@string/questionFont</item>
    </style>
    <style name="questionName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font25</item>
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamilyFile">@string/questionFont</item>
    </style>
    <style name="selectedOption">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/base2</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ratingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/active_yellow</item>
    </style>
    <style name="selectedRatingValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font30</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/unselected_option_bg</item>
    </style>

    <style name="subHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font13</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>