<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF6A4351" android:endColor="#B06A4351" android:angle="270" android:type="radial" android:gradientRadius="250"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF6A4351" android:endColor="#B06A4351" android:angle="270" android:type="radial" android:gradientRadius="250"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/formButtonBg" />
            <corners android:radius="@dimen/base3"/>
        </shape>
    </item>
</selector>
