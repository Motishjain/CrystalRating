<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#679868" android:endColor="#6ACA25" android:angle="270" android:type="radial" android:gradientRadius="250"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#679868" android:endColor="#6ACA25" android:angle="270" android:type="radial" android:gradientRadius="250"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/done_ratings" />
        </shape>
    </item>
</selector>