<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF9900" android:endColor="#FF9970" android:angle="270" android:type="radial" android:gradientRadius="250"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF9900" android:endColor="#FF9970" android:angle="270" android:type="radial" android:gradientRadius="250"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/rating3" />
        </shape>
    </item>
</selector>
